{% extends "layout.html.twig" %}

{% block title %}Projects{% endblock %}

{% block content %}
    <br>
    <a href="{{ app.url_generator.generate('addProject') }}">
        <button class="btn btn-primary ButtonYuNoRight">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New project
        </button>
    </a>
    <br><br><br>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <section class="col-lg-12">
        <table class="table table-bordered table-striped table-condensed ">
            <thead>
            <tr>
                <th>Alive ?</th>
                <th>Project Name</th>
                <th>Branch</th>
                <th>Credential</th>
                <th>Number of checklists posts</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    {% if project.alive == 1 %}
                        <td><input type="checkbox" disabled checked></td>
                    {% else %}
                        <td><input type="checkbox" disabled></td>
                    {% endif %}
                    <td>{{ project.name }}</td>
                    <td>{{ project.branch }}</td>
                    <td>{{ project.credential }}</td>
                    <td>{{ project.numberTaskList }}</td>
                    <td>
                        <a href="{{ app.url_generator.generate('listProject') }}/{{ project.id }}/edit">
                            <button class="btn btn-success">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                            </button>
                        </a>
                        <a href="{{ app.url_generator.generate('listProject') }}/{{ project.id }}/delete">
                            <button class="btn btn-danger ">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                            </button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}